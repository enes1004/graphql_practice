				{
					"name": "Get User by ID",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"query GetUser($id: ID!) { user(id: $id) { id name email createdAt } }\",\n  \"variables\": {\n    \"id\": \"1\"\n  }\n}"
						},
