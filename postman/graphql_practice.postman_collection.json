							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation UpdateUser($id: ID!, $input: UpdateUserInput!) { updateUser(id: $id, input: $input) { id name email createdAt } }\",\n  \"variables\": {\n    \"id\": \"1\",\n    \"input\": {\n      \"name\": \"Alice Johnson Updated\"\n    }\n  }\n}"
						},
